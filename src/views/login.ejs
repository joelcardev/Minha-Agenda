<%- include('includes/head'); %>
  <%- include('includes/nav'); %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center mb-3">
            Login
          </h1>
          <h4 class="text-center lead mb-3">
            Faça seu login ou crie uma conta abaixo.
            </h3>

            <%- include('includes/messages.ejs');%>


              <div class="row">
                <div class="col-lg-7">
                  <h4>Faça seu cadastro</h4>
                  <form action="/login/registrar" method="post">

                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                    <div class="form-group">

                      <label for="inputusuario1">Usuario</label>
                      <input type="text" class="form-control" name="usuario" aria-describedby="usuarioHelp"
                        placeholder="Entre com usuario">
                    </div>

                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
                        placeholder="Enter email">
                      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                    </div>

                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>

                    <button type="submit" class="btn btn-primary">Cadastar</button>
                  </form>

                </div>

                <div class="col-lg-4">
                  <h4>Faça seu login</h4>

                  <form action="/login/entrar" method="post">
                    <input type="hidden" name="_csrf" value=<%=csrfToken %> >

                    <div class="form-group">
                      <label for="exampleInputEmail1">Email address</label>
                      <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
                        placeholder="Enter email">
                      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                    </div>

                    <div class="form-group">
                      <label for="exampleInputPassword1">Password</label>
                      <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" name="check">
                      <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Entrar</button>
                  </form>
                </div>

              </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer'); %>