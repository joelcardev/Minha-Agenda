<%- include('includes/head'); %>
  <%- include('includes/nav'); %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 my-3">

          <h1 class="agenda text-center mb-3 nomecadastro">
            Cadastrar Contatos
          </h1>
          <h4 class="text-center lead mb-3">
            Crie um cadastro abaixo
            </h3>

            <% if(!contato._id){ %>
              <form action="/cadcontatos/registrar" method="post">

                <%} else{ %>
                  <form action="/cadcontatos/<%= contato._id %> " method="post">
                    <% } %>

                      <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                      <div class="form-group">

                        <label>Nome</label>
                        <input value="<%= contato.nome %>" type="text" class="form-control" name="nome"
                          aria-describedby="usuarioHelp" placeholder="Entre com
                      nome">
                      </div>

                      <div class="form-group">
                        <label>Email</label>
                        <input type="email" value="<%= contato.email %>" class="form-control" name="email"
                          aria-describedby="emailHelp" placeholder="Entre email">
                      </div>
                      <div class="form-group">
                        <label>Telefone</label>

                        <input type="tel" maxlength="15" id="tele" value="<%=
                        contato.telefone %>" class="mascara-cadastro
                      form-control " name="telefone" placeholder="telefone">
                      </div>
                      <% if(!contato._id) {%>
                        <button type="submit" class="btn btn-primary">Cadastar
                          Contato</button>
                        <%}else{ %>
                          <button type="submit" class="btn btn-primary">Salvar
                            Alteração</button>
                          <% } %>
                            <%- include('includes/messages.ejs');%>
        </div>
        <div class="col-lg-3"></div>
      </div>
    </div>


    <%- include('includes/footer'); %>